#include<algorithm>
#include<cstdio>
#include<iostream>
#include<string>
using namespace std;


int get_lcs(string x, string y) {
  int n = x.size();
  int m = y.size();

  int c[n+1][m+1];

  for (int i = 0; i < n; i++) c[i][0] = 0;
  for (int j = 1; j < m; j++) c[0][j] = 0;
  x = ' ' + x;
  y = ' ' + y;

  for (int i = 1; i < n + 1; i++) {
    for (int j = 1; j < m + 1; j++) {
      printf("%d ", c[i][j]);
    }
    printf("\n");
  }

  int maxl = 0;
  for (int i = 1; i < n + 1; i++) {
    for (int j = 1; j < m + 1; j++) {
      if (x[i] == x[j]) {
        c[i][j] = c[i-1][j-1] + 1;
      } else {
        max(c[i][j-1], c[i-1][j]);
      }
      maxl = max(maxl, c[i][j]);
      printf("%d %d %d\n", i, j, maxl);
    }
  }
  return c[n+1][m+1];
}


int main() {
  int q;
  scanf("%d", &q);

  string x, y;
  for (int i = 0; i < q; i++) {
    cin >> x >> y;
    printf("%d\n", get_lcs(x, y));
  }

  return 0;
}
